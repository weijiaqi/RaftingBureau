<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="CenterProfileTheme" parent="AppTheme">

        <item name="android:statusBarColor">@color/transparent</item>
        <item name="colorPrimary">@color/purple_200</item>
        <item name="colorPrimaryDark">@color/purple_200</item>
        <item name="colorAccent">@color/purple_200</item>

    </style>
    <!--设置背景图Theme-->
    <style name="AppSplash" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="android:windowBackground">@drawable/layer_splash</item>
<!--        <item name="android:windowNoTitle">true</item>-->
<!--        <item name="android:windowFullscreen">true</item>-->
<!--        <item name="android:windowDrawsSystemBarBackgrounds">false</item>-->

        <item name="android:windowTranslucentStatus">false</item>
        <item name="android:windowTranslucentNavigation">true</item>
        <!--Android 5.x开始需要把颜色设置透明，否则导航栏会呈现系统默认的浅灰色-->
        <item name="android:statusBarColor">@android:color/transparent</item>
    </style>
</resources>