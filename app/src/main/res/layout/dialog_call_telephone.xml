<?xml version="1.0" encoding="utf-8"?>
<com.hjq.shape.layout.ShapeLinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    app:shape_solidColor="@color/white"
    app:shape_topLeftRadius="10dp"
    app:shape_topRightRadius="10dp">

    <TextView
        android:id="@+id/tv_telephone"
        android:layout_width="match_parent"
        android:layout_height="42dp"
        android:gravity="center"
        android:text="15313067611"
        android:textColor="@color/color_99"
        android:textSize="14sp" />


    <View
        android:id="@+id/view_color_line"
        android:layout_width="match_parent"
        android:layout_height="0.4dp"
        android:background="@color/color_e6" />

    <TextView
        android:id="@+id/tv_call"
        android:layout_width="match_parent"
        android:layout_height="42dp"
        android:gravity="center"
        android:text="呼叫"
        android:textColor="@color/color_99"
        android:textSize="14sp" />

    <View
        android:layout_width="match_parent"
        android:layout_height="5dp"
        android:background="@color/color_f0f0" />

    <TextView
        android:id="@+id/tv_cancel"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:gravity="center"
        android:text="取消"
        android:textColor="@color/color_99"
        android:textSize="14sp" />

</com.hjq.shape.layout.ShapeLinearLayout>