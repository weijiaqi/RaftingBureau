<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <com.hjq.shape.layout.ShapeRelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:shape_endColor="@color/color_6c"
        app:shape_radius="10dp"
        app:shape_startColor="@color/color_6d">

        <TextView
            android:id="@+id/tv_message"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginTop="14dp"
            android:text="漂来新的信息"
            android:textColor="@color/color_0b"
            android:textSize="12sp" />


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tv_message"
            android:layout_marginStart="13dp"
            android:layout_marginTop="10dp"
            android:layout_marginEnd="9dp"
            android:layout_marginBottom="13dp"
            android:background="@drawable/rafting_info_bg"
            android:paddingStart="24dp">

            <TextView
                android:id="@+id/tv_rafting_type"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="26dp"
                android:background="@drawable/rafting_frame"
                android:gravity="center"
                android:text="传递漂"
                android:textColor="@color/white"
                android:textSize="12sp" />

            <TextView
                android:id="@+id/tv_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/tv_rafting_type"
                android:layout_marginTop="11dp"
                android:text="昵称：你的小太阳"
                android:textColor="@color/white"
                android:textSize="14sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/tv_planet"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/tv_name"
                android:layout_marginTop="3dp"
                android:text="荒芜星球人"
                android:textColor="@color/color_6ce"
                android:textSize="11sp" />

            <TextView
                android:id="@+id/tv_identity"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignTop="@+id/tv_planet"
                android:layout_marginStart="15dp"
                android:layout_toRightOf="@+id/tv_planet"
                android:text="星际开荒者"
                android:textColor="@color/color_6ce"
                android:textSize="11sp" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/tv_planet"
                android:layout_marginTop="12dp">

                <TextView
                    android:id="@+id/tv_select"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/short_green_frame"
                    android:gravity="center"
                    android:text="查看漂流"
                    android:textStyle="bold"
                    android:textColor="@color/color_00"
                    android:textSize="12sp" />

                <TextView
                    android:id="@+id/tv_throw_space"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginStart="15dp"
                    android:layout_toRightOf="@+id/tv_select"
                    android:text="丢回太空"
                    android:textStyle="bold"
                    android:textColor="@color/white"
                    android:textSize="12sp" />
            </RelativeLayout>

        </RelativeLayout>

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_marginTop="14dp"
            android:layout_marginEnd="20dp"
            android:src="@drawable/drift_guard" />

    </com.hjq.shape.layout.ShapeRelativeLayout>
</RelativeLayout>