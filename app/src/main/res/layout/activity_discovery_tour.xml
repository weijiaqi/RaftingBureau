<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/discovery_bg"
    android:fitsSystemWindows="true"
    android:orientation="vertical">

    <include layout="@layout/include_title" />


    <ImageView
        android:id="@+id/iv_start_discovery"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/toolbar"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="35dp"
        android:src="@drawable/start_discovery" />

    <ImageView
        android:id="@+id/tv_way_to_explore"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/iv_start_discovery"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="14dp"
        android:src="@drawable/way_to_explore" />


    <FrameLayout
        android:id="@+id/frame"
        android:layout_below="@+id/tv_way_to_explore"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:clipChildren="false">

        <androidx.viewpager.widget.ViewPager
            android:id="@+id/vp_img"
            android:layout_marginTop="150dp"
            android:layout_width="wrap_content"
            android:layout_height="160dp"
            android:layout_marginLeft="80dp"
            android:layout_marginRight="95dp">

        </androidx.viewpager.widget.ViewPager>

    </FrameLayout>

    <ImageView
        android:id="@+id/iv_rocket"
       android:visibility="gone"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/rl_message"
        android:layout_marginStart="35dp"
        android:src="@drawable/rocket"
        />
    <RelativeLayout
        android:visibility="gone"
        android:id="@+id/rl_message"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@+id/iv_rocket"
        android:layout_below="@+id/tv_way_to_explore"
        android:layout_marginTop="75dp"
        android:layout_marginEnd="40dp"
        android:background="@drawable/message_box">


        <TextView
            android:id="@+id/tv_message"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="6dp"
            android:text="漂来新信息"
            android:textColor="@color/white"
            android:textSize="12sp" />

        <com.hjq.shape.view.ShapeTextView
            android:id="@+id/tv_open"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tv_message"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="5dp"
            android:paddingHorizontal="17dp"
            android:text="开启"
            android:textColor="@color/color_00"
            android:textSize="12sp"
            app:shape_endColor="@color/color_6c"
            app:shape_radius="100dp"
            app:shape_startColor="@color/color_6d" />
    </RelativeLayout>


    <TextView
        android:id="@+id/tv_about_me"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginEnd="29dp"
        android:layout_marginBottom="122dp"
        android:drawableTop="@drawable/about_me"
        android:drawablePadding="4dp"
        android:text=""
        android:textColor="@color/white"
        android:textSize="12sp" />


    <TextView
        android:id="@+id/tv_space_capsule"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginEnd="29dp"
        android:layout_marginBottom="49dp"
        android:drawableTop="@drawable/space_capsule"
        android:drawablePadding="4dp"
        android:text="空间站"
        android:textColor="@color/white"
        android:textSize="12sp" />


</RelativeLayout>