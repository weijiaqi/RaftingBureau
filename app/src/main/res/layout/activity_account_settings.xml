<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/color_01"
    android:fitsSystemWindows="true"
    android:orientation="vertical">

    <include layout="@layout/include_title" />


    <com.hjq.shape.layout.ShapeLinearLayout
        android:id="@+id/ll_top"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/toolbar"
        android:layout_marginHorizontal="14dp"
        android:layout_marginTop="10dp"
        android:orientation="vertical"
        android:paddingHorizontal="14dp"
        android:paddingBottom="22dp"
        app:shape_radius="10dp"
        app:shape_solidColor="@color/color_1c">

        <RelativeLayout
            android:id="@+id/rl_nikename"
            android:layout_width="match_parent"
            android:layout_height="43dp">

            <ImageView
                android:id="@+id/iv_nikename"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:src="@drawable/account_nikename" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="12dp"
                android:layout_toRightOf="@+id/iv_nikename"
                android:text="昵称"
                android:textColor="@color/color_fe"
                android:textSize="14sp" />


            <com.hjq.shape.view.ShapeTextView
                android:id="@+id/tv_nikename"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginTop="7dp"
                android:layout_marginEnd="10dp"
                android:layout_toLeftOf="@+id/iv_nikename_back"
                android:text=""
                android:textSize="11sp"
                app:shape_textEndColor="@color/color_6d"
                app:shape_textStartColor="@color/color_6c" />


            <ImageView
                android:id="@+id/iv_nikename_back"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:scaleType="center"
                android:src="@drawable/account_back" />

        </RelativeLayout>

        <include layout="@layout/view_3d_color_line" />

        <RelativeLayout
            android:id="@+id/rl_privacy"
            android:layout_width="match_parent"
            android:layout_height="43dp">

            <ImageView
                android:id="@+id/iv_privacy"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:src="@drawable/account_privacy" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="12dp"
                android:layout_toRightOf="@+id/iv_privacy"
                android:text="用户隐私协议"
                android:textColor="@color/color_fe"
                android:textSize="14sp" />

            <ImageView
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:scaleType="center"
                android:src="@drawable/account_back" />

        </RelativeLayout>

        <include layout="@layout/view_3d_color_line" />

        <RelativeLayout
            android:id="@+id/rl_register"
            android:layout_width="match_parent"
            android:layout_height="43dp">

            <ImageView
                android:id="@+id/iv_register"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:src="@drawable/account_privacy" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="12dp"
                android:layout_toRightOf="@+id/iv_register"
                android:text="用户注册协议"
                android:textColor="@color/color_fe"
                android:textSize="14sp" />

            <ImageView
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:scaleType="center"
                android:src="@drawable/account_back" />

        </RelativeLayout>

        <include layout="@layout/view_3d_color_line" />


        <RelativeLayout
            android:id="@+id/rl_feedback"
            android:layout_width="match_parent"
            android:layout_height="43dp">

            <ImageView
                android:id="@+id/iv_feedback"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:src="@drawable/feed_back" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="12dp"
                android:layout_toRightOf="@+id/iv_feedback"
                android:text="意见反馈"
                android:textColor="@color/color_fe"
                android:textSize="14sp" />

            <ImageView
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:scaleType="center"
                android:src="@drawable/account_back" />

        </RelativeLayout>

        <include layout="@layout/view_3d_color_line" />

        <RelativeLayout
            android:id="@+id/rl_log_out"
            android:layout_width="match_parent"
            android:layout_height="43dp">

            <ImageView
                android:id="@+id/iv_log_out"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:src="@drawable/log_out" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="12dp"
                android:layout_toRightOf="@+id/iv_log_out"
                android:text="注销账户"
                android:textColor="@color/color_fe"
                android:textSize="14sp" />

            <ImageView
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:scaleType="center"
                android:src="@drawable/account_back" />

        </RelativeLayout>
    </com.hjq.shape.layout.ShapeLinearLayout>


    <com.hjq.shape.view.ShapeTextView
        android:id="@+id/tv_exit"
        android:layout_width="156dp"
        android:layout_height="38dp"
        android:layout_below="@+id/ll_top"
        android:layout_centerHorizontal="true"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="29dp"
        android:gravity="center"
        android:text="退出漂流局"
        android:textColor="@color/white"
        android:textSize="14sp"
        android:textStyle="bold"
        app:shape_radius="100dp"
        app:shape_solidColor="@color/color_dc4" />

    <TextView
        android:id="@+id/tv_version_code"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_gravity="center_horizontal"
        android:layout_marginBottom="40dp"
        android:gravity="center"
        android:padding="10dp"
        android:text="版本号：V"
        android:textColor="@color/color_66"
        android:textSize="12sp" />

</RelativeLayout>