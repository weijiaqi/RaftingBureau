<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
 >


    <ImageView
        android:id="@+id/iv_city_pay"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/city_pay" />

    <ImageView
        android:id="@+id/iv_city_free"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/iv_city_pay"
        android:src="@drawable/city_free" />

</RelativeLayout>