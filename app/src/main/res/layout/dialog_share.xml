<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_gravity="center_horizontal">

    <LinearLayout
        android:id="@+id/ll_top"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:background="@drawable/share_bg"
        android:orientation="vertical">

        <com.drifting.bureau.view.FontTextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="62dp"
            android:text="荒芜星球居住证"
            android:textColor="@color/color_00"
            android:textSize="29sp" />

        <LinearLayout
            android:layout_width="211dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="132dp"
            android:background="@drawable/share_data_bg"
            android:orientation="vertical"
            android:paddingLeft="22dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="30dp"
                android:orientation="horizontal">

                <LinearLayout
                    android:id="@+id/ll_left"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"

                        android:text="昵称_"
                        android:textColor="@color/color_cc"
                        android:textSize="8sp" />

                    <TextView
                        android:id="@+id/tv_name"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="1.5dp"
                        android:text=""
                        android:textColor="@color/color_6d"
                        android:textSize="9sp" />
                </LinearLayout>


                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"

                        android:text="身份_"
                        android:textColor="@color/color_cc"
                        android:textSize="8sp" />

                    <TextView
                        android:id="@+id/tv_identity"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="1.5dp"
                        android:text=""
                        android:textColor="@color/color_6d"
                        android:textSize="9sp" />
                </LinearLayout>


            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="12dp"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"

                    android:text="居住地_"
                    android:textColor="@color/color_cc"
                    android:textSize="8sp" />

                <TextView
                    android:id="@+id/tv_address"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="1.5dp"
                    android:text=""
                    android:textColor="@color/color_6d"
                    android:textSize="9sp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="14dp"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="建设度_"
                    android:textColor="@color/color_cc"
                    android:textSize="8sp" />

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="1.5dp"
                    android:gravity="center_vertical"
                    android:orientation="horizontal">


                    <ProgressBar
                        android:id="@+id/pr_upload_value"
                        style="@android:style/Widget.ProgressBar.Horizontal"
                        android:layout_width="127dp"
                        android:layout_height="6dp"
                        android:layout_centerVertical="true"
                        android:max="100"
                        android:min="0"
                        android:progressDrawable="@drawable/progressbar" />


                    <TextView
                        android:id="@+id/tv_num"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="10dp"
                        android:layout_marginBottom="0.5dp"
                        android:text="0%"
                        android:textColor="@color/color_6de"
                        android:textSize="9sp"
                        android:textStyle="bold" />


                </LinearLayout>
            </LinearLayout>
        </LinearLayout>


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="55dp"
            android:gravity="center_horizontal">


            <ImageView
                android:id="@+id/tv_code"
                android:layout_width="67dp"
                android:layout_height="67dp"
                android:src="@drawable/demo_code" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="67dp"
                android:layout_marginStart="24dp"
                android:layout_toRightOf="@+id/tv_code"
                android:gravity="center_vertical"
                android:orientation="vertical">

                <com.drifting.bureau.view.FontTextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="识别二维码"
                    android:textColor="@color/color_00"
                    android:textSize="12sp"
                    app:fontType="Pingfang_bold" />

                <com.drifting.bureau.view.FontTextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:text="一起进入元宇宙世界吧！"
                    android:textColor="@color/color_00"
                    android:textSize="12sp"
                    app:fontType="Pingfang_bold" />


            </LinearLayout>

        </RelativeLayout>

    </LinearLayout>


    <com.hjq.shape.view.ShapeTextView
        android:id="@+id/tv_save_pic"
        android:layout_width="125dp"
        android:layout_height="34dp"
        android:layout_below="@+id/ll_top"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="29dp"
        android:gravity="center"
        android:text="保存图片"
        android:textColor="@color/white"
        android:textSize="14sp"
        android:textStyle="bold"
        app:shape_endColor="@color/color_70"
        app:shape_radius="100dp"
        app:shape_startColor="@color/color_d6" />
</RelativeLayout>