<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/color_01"
    android:fitsSystemWindows="true">

    <ImageView
        android:id="@+id/iv_head"
        android:layout_width="47dp"
        android:layout_height="38dp"
        android:layout_marginStart="25dp"
        android:layout_marginTop="30dp"
        android:src="@drawable/hint_head" />

    <include
        layout="@layout/include_blue_solid_block"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:layout_marginTop="30dp"
        android:layout_toRightOf="@+id/iv_head" />


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="123dp">

        <TextView
            android:id="@+id/tv_sign_login"
            android:layout_width="240dp"
            android:layout_height="38dp"
            android:layout_centerHorizontal="true"
            android:layout_gravity="center_horizontal"
            android:background="@drawable/solid_blue_block_button"
            android:gravity="center"
            android:text="手机号注册/登录"
            android:textColor="@color/color_01"
            android:textSize="14sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/tv_other_phone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tv_sign_login"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="14dp"
            android:textSize="12sp"
            android:text="用其他手机号登录"
            android:textColor="@color/color_cc" />

    </RelativeLayout>

</RelativeLayout>