<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/planetary_bg"
    android:fitsSystemWindows="true"
    android:orientation="vertical">

    <include layout="@layout/include_title" />

    <RelativeLayout
        android:layout_marginTop="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/toolbar">

        <com.drifting.bureau.view.FontTextView
            android:id="@+id/tv_move_away"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_marginTop="10dp"
            android:layout_marginEnd="24dp"
            android:text="搬离星球"
            android:textColor="@color/white"
            android:textSize="12sp"
            app:fontType="Pingfang_bold" />

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true">

            <View
                android:id="@+id/view1"
                android:layout_width="206dp"
                android:layout_height="206dp"
                android:layout_centerVertical="true"
                android:layout_marginStart="-50dp"
                android:background="@drawable/shape_stroke_circle" />

            <TextView
                android:id="@+id/tv_planet1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="48dp"
                android:layout_marginTop="15dp"
                android:drawableTop="@drawable/planetary01"
                android:drawablePadding="2dp"
                android:text="燧人星球"
                android:textColor="@color/white"
                android:textSize="12sp" />

            <TextView
                android:id="@+id/tv_planet2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/tv_planet1"
                android:layout_marginStart="18dp"
                android:layout_marginTop="-10dp"
                android:layout_toRightOf="@+id/tv_planet1"
                android:drawableTop="@drawable/planetary01"
                android:drawablePadding="2dp"
                android:text="黄帝星球"
                android:textColor="@color/white"
                android:textSize="12sp" />


            <TextView
                android:id="@+id/tv_planet3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/tv_planet2"
                android:layout_alignLeft="@+id/tv_planet2"
                android:layout_marginTop="20dp"
                android:drawableTop="@drawable/planetary01"
                android:drawablePadding="2dp"
                android:text="大禹星球"
                android:textColor="@color/white"
                android:textSize="12sp" />


            <TextView
                android:id="@+id/tv_planet4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="36dp"
                android:layout_marginTop="220dp"
                android:drawableTop="@drawable/planetary01"
                android:drawablePadding="2dp"
                android:text="吕尚星球"
                android:textColor="@color/white"
                android:textSize="12sp" />


        </RelativeLayout>

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="450dp"
            android:layout_centerVertical="true">

            <View
                android:layout_width="372dp"
                android:layout_height="372dp"
                android:layout_centerVertical="true"
                android:layout_marginStart="-128dp"
                android:background="@drawable/shape_stroke_circle" />


            <TextView
                android:id="@+id/tv_planet5"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="18dp"
                android:layout_marginTop="15dp"
                android:drawableTop="@drawable/planetary01"
                android:drawablePadding="2dp"
                android:text="姮娥星球"
                android:textColor="@color/white"
                android:textSize="12sp" />


            <TextView
                android:id="@+id/tv_planet6"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="55dp"
                android:layout_marginTop="38dp"
                android:layout_toRightOf="@+id/tv_planet5"
                android:drawableTop="@drawable/planetary01"
                android:drawablePadding="2dp"
                android:text="夸父星球"
                android:textColor="@color/white"
                android:textSize="12sp" />

            <TextView
                android:id="@+id/tv_planet7"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/tv_planet6"
                android:layout_marginStart="35dp"
                android:layout_marginTop="31dp"
                android:layout_toRightOf="@+id/tv_planet6"
                android:drawableTop="@drawable/planetary01"
                android:drawablePadding="2dp"
                android:text="嫘祖星球"
                android:textColor="@color/white"
                android:textSize="12sp" />


            <TextView
                android:id="@+id/tv_planet8"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/tv_planet7"
                android:layout_alignLeft="@+id/tv_planet7"
                android:layout_marginTop="48dp"
                android:drawableTop="@drawable/planetary01"
                android:drawablePadding="2dp"
                android:text="玄女星球"
                android:textColor="@color/white"
                android:textSize="12sp" />

            <TextView
                android:id="@+id/tv_planet9"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/tv_planet8"
                android:layout_marginTop="23dp"
                android:layout_marginEnd="10dp"
                android:layout_toLeftOf="@+id/tv_planet8"
                android:drawableTop="@drawable/planetary01"
                android:drawablePadding="2dp"
                android:text="伏羲星球"
                android:textColor="@color/white"
                android:textSize="12sp" />


            <TextView
                android:id="@+id/tv_planet10"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"

                android:layout_alignParentBottom="true"

                android:layout_marginStart="48dp"
                android:drawableTop="@drawable/planetary01"
                android:drawablePadding="2dp"
                android:text="后裔星球"
                android:textColor="@color/white"
                android:textSize="12sp" />


        </RelativeLayout>

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="567dp"
            android:layout_centerVertical="true">

            <View
                android:layout_width="537dp"
                android:layout_height="537dp"
                android:layout_alignParentBottom="true"
                android:layout_marginStart="-213dp"
                android:background="@drawable/shape_stroke_circle" />


            <com.hjq.shape.view.ShapeTextView
                android:id="@+id/tv_planet11"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="64dp"
                android:layout_marginTop="8dp"
                android:drawableLeft="@drawable/planetary_select_location"
                android:drawableTop="@drawable/planetary01"
                android:drawablePadding="2dp"
                android:gravity="center_horizontal"
                android:text="荒芜星球"
                android:textSize="12sp"
                app:shape_textEndColor="@color/color_6d"
                app:shape_textStartColor="@color/color_6c" />


            <com.hjq.shape.view.ShapeTextView
                android:id="@+id/tv_planet12"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/tv_planet11"
                android:layout_marginStart="76dp"
                android:layout_marginTop="-10dp"
                android:layout_toRightOf="@+id/tv_planet11"
                android:drawableTop="@drawable/planetary01"
                android:text="神农星球"
                android:textColor="@color/white"
                android:textSize="12sp" />


            <com.hjq.shape.view.ShapeTextView
                android:id="@+id/tv_planet13"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/tv_planet12"
                android:layout_marginStart="25dp"
                android:layout_marginTop="41dp"
                android:layout_toRightOf="@+id/tv_planet12"
                android:drawableTop="@drawable/planetary01"
                android:text="女娲星球"
                android:textColor="@color/white"
                android:textSize="12sp" />


            <com.hjq.shape.view.ShapeTextView
                android:id="@+id/tv_planet14"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/tv_planet13"
                android:layout_alignLeft="@+id/tv_planet13"
                android:layout_marginStart="20dp"
                android:layout_marginTop="50dp"
                android:drawableTop="@drawable/planetary01"
                android:text="仓颉星球"
                android:textColor="@color/white"
                android:textSize="12sp" />

            <com.hjq.shape.view.ShapeTextView
                android:id="@+id/tv_planet15"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/tv_planet14"
                android:layout_marginTop="60dp"
                android:layout_marginEnd="-25dp"
                android:layout_toLeftOf="@+id/tv_planet14"
                android:drawableTop="@drawable/planetary01"
                android:text="盘古星球"
                android:textColor="@color/white"
                android:textSize="12sp" />


            <com.hjq.shape.view.ShapeTextView
                android:id="@+id/tv_planet16"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_marginStart="170dp"
                android:drawableTop="@drawable/planetary01"
                android:text="仓颉星球"
                android:textColor="@color/white"
                android:textSize="12sp" />

        </RelativeLayout>

    </RelativeLayout>


</RelativeLayout>