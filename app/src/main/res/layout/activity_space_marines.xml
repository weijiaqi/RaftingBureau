<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/space_marines_bg"
    android:fitsSystemWindows="true">

    <include layout="@layout/include_title" />


    <RelativeLayout
        android:id="@+id/rl_top"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/toolbar"
        android:layout_marginHorizontal="14dp">


        <com.drifting.bureau.view.FontTextView
            android:id="@+id/tv_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:text="你的小太阳"
            android:textColor="@color/white"
            android:textSize="14sp"
            app:fontType="Noto_bold" />

        <com.hjq.shape.view.ShapeTextView
            android:id="@+id/tv_share"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tv_name"
            android:gravity="center"
            android:paddingHorizontal="17dp"
            android:paddingVertical="2dp"
            android:text="分享"
            android:textColor="@color/color_00"
            android:textSize="12sp"
            android:textStyle="bold"
            app:shape_endColor="@color/color_6d"
            app:shape_radius="100dp"
            app:shape_startColor="@color/color_6c" />


        <com.hjq.shape.layout.ShapeLinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tv_share"
            android:layout_marginTop="17dp"
            android:orientation="horizontal"
            android:paddingLeft="19dp"
            android:paddingTop="25dp"
            android:paddingBottom="20dp"
            app:shape_radius="10dp"
            app:shape_solidColor="@color/color_white_cc">


            <LinearLayout
                android:layout_width="1dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="累计收益(元)"
                    android:textColor="@color/color_66"
                    android:textSize="12sp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:text="10898"
                    android:textColor="@color/color_00"
                    android:textSize="23sp"
                    android:textStyle="bold" />
            </LinearLayout>


            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="战队人数"
                    android:textColor="@color/color_66"
                    android:textSize="12sp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:text="807"
                    android:textColor="@color/color_00"
                    android:textSize="23sp"
                    android:textStyle="bold" />
            </LinearLayout>

            <View
                android:layout_width="0dp"
                android:layout_height="1dp"
                android:layout_weight="1" />

        </com.hjq.shape.layout.ShapeLinearLayout>

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_marginTop="15dp"
            android:layout_marginEnd="4dp"
            android:src="@drawable/star_fighter_04" />

    </RelativeLayout>


    <com.hjq.shape.layout.ShapeLinearLayout
        android:id="@+id/ll_center"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/rl_top"
        android:layout_marginHorizontal="14dp"
        android:layout_marginTop="19dp"
        android:orientation="vertical"
        android:paddingHorizontal="19dp"
        android:paddingTop="19dp"
        android:paddingBottom="27dp"
        app:shape_radius="10dp"
        app:shape_solidColor="@color/color_white_cc">

        <TextView
            android:id="@+id/tv_withdrawal_record"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="end"
            android:text="提现记录>"
            android:textColor="@color/color_66"
            android:textSize="12sp" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="可提现(元)"
                android:textColor="@color/color_66"
                android:textSize="12sp" />

            <TextView
                android:id="@+id/tv_sure_withdrawal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:text="9998"
                android:textColor="@color/color_00"
                android:textSize="17sp"
                android:textStyle="bold" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="审核中(元)"
                    android:textColor="@color/color_66"
                    android:textSize="12sp" />

                <TextView
                    android:id="@+id/tv_under_review"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:text="9998"
                    android:textColor="@color/color_00"
                    android:textSize="17sp"
                    android:textStyle="bold" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="已提现(元)"
                    android:textColor="@color/color_66"
                    android:textSize="12sp" />

                <TextView
                    android:id="@+id/withdrawn_cash"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:text="0"
                    android:textColor="@color/color_00"
                    android:textSize="17sp"
                    android:textStyle="bold" />
            </LinearLayout>

            <View
                android:layout_width="0dp"
                android:layout_height="1dp"
                android:layout_weight="1" />

        </LinearLayout>


        <com.hjq.shape.view.ShapeTextView
            android:id="@+id/tv_withdrawal"
            android:layout_width="246dp"
            android:layout_height="38dp"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="20dp"
            android:gravity="center"
            android:text="申请提现"
            android:textColor="@color/white"
            android:textSize="14sp"
            android:textStyle="bold"
            app:shape_endColor="@color/color_ff2"
            app:shape_radius="100dp"
            app:shape_startColor="@color/color_ff3" />

    </com.hjq.shape.layout.ShapeLinearLayout>


    <LinearLayout
        android:id="@+id/ll_bottom"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/ll_center"
        android:layout_marginTop="29dp"
        android:orientation="horizontal">


        <RelativeLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
           android:paddingLeft="40dp">

            <ImageView
                android:id="@+id/iv_order"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/space_marines_order" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignTop="@+id/iv_order"
                android:layout_marginLeft="10dp"
                android:layout_toRightOf="@+id/iv_order"
                android:text="战队订单"
                android:textColor="@color/white"
                android:textSize="14sp"
                android:textStyle="bold" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBottom="@+id/iv_order"
                android:layout_marginLeft="10dp"
                android:layout_toRightOf="@+id/iv_order"
                android:text="1879"
                android:textColor="@color/color_66"
                android:textSize="12sp" />

        </RelativeLayout>


        <RelativeLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:paddingLeft="40dp">

            <ImageView
                android:id="@+id/iv_ranking"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/space_marines_ranking" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignTop="@+id/iv_ranking"
                android:layout_marginLeft="10dp"
                android:layout_toRightOf="@+id/iv_ranking"
                android:text="战队排名"
                android:textColor="@color/white"
                android:textSize="14sp"
                android:textStyle="bold" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBottom="@+id/iv_ranking"
                android:layout_marginLeft="10dp"
                android:layout_toRightOf="@+id/iv_ranking"
                android:text="2"
                android:textColor="@color/color_66"
                android:textSize="12sp" />

        </RelativeLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/ll_bottom"
        android:layout_marginTop="38dp"
        android:orientation="horizontal">

        <RelativeLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
           android:paddingLeft="40dp">

            <ImageView
                android:id="@+id/iv_explain"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/space_marines_explain" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignTop="@+id/iv_explain"
                android:layout_marginLeft="10dp"
                android:layout_toRightOf="@+id/iv_explain"
                android:text="战队说明"
                android:textColor="@color/white"
                android:textSize="14sp"
                android:textStyle="bold" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBottom="@+id/iv_explain"
                android:layout_marginLeft="10dp"
                android:layout_toRightOf="@+id/iv_explain"
                android:text="战队奖励说明"
                android:textColor="@color/color_66"
                android:textSize="12sp" />

        </RelativeLayout>

        <View
            android:layout_width="0dp"
            android:layout_height="1dp"
            android:layout_weight="1" />
    </LinearLayout>
</RelativeLayout>