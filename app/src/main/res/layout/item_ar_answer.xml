<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="350dp"
    android:background="@drawable/ar_answer_bg">


    <TextView
        android:id="@+id/tv_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="75dp"
        android:ellipsize="end"
        android:singleLine="true"
        android:text=""
        android:textColor="@color/white"
        android:textSize="23sp"
        android:textStyle="bold" />


    <LinearLayout
        android:id="@+id/ll_one"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tv_title"
        android:orientation="horizontal">


        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="70dp"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tv_answerA"
                android:layout_width="wrap_content"
                android:layout_height="50dp"
                android:layout_marginHorizontal="20dp"
                android:text=""
                android:textColor="@color/white"
                android:textSize="20sp"
                android:textStyle="bold" />

            <CheckBox
                android:id="@+id/sellectA"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="25dp"
                android:button="@null"
                android:drawableLeft="@drawable/answer_ar_checked"
                android:padding="10dp"
                android:textColor="@color/color_cc"
                android:textSize="12sp" />


        </LinearLayout>


        <View
            android:layout_width="1dp"
            android:layout_height="168dp"
            android:layout_marginTop="45dp"
            android:background="@color/color_white_4d" />

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="70dp"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tv_answerB"
                android:layout_width="wrap_content"
                android:layout_height="50dp"
                android:layout_marginHorizontal="20dp"
                android:text=""
                android:textColor="@color/white"
                android:textSize="20sp"
                android:textStyle="bold" />

            <CheckBox
                android:id="@+id/sellectB"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="25dp"
                android:button="@null"
                android:drawableLeft="@drawable/answer_ar_checked"
                android:padding="10dp"
                android:textColor="@color/color_cc"
                android:textSize="12sp" />
        </LinearLayout>
    </LinearLayout>


    <LinearLayout
        android:id="@+id/ll_two"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tv_title"
        android:visibility="gone">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="50dp"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical">


            <ImageView
                android:id="@+id/iv_picA"
                android:layout_width="120dp"
                android:layout_height="120dp" />

            <CheckBox
                android:id="@+id/sellectImgA"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:button="@null"
                android:drawableLeft="@drawable/answer_ar_checked"
                android:padding="10dp"
                android:textColor="@color/color_cc"
                android:textSize="12sp" />

        </LinearLayout>

        <View
            android:layout_width="1dp"
            android:layout_height="168dp"
            android:layout_marginTop="45dp"
            android:background="@color/color_white_4d" />

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="50dp"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/iv_picB"
                android:layout_width="120dp"
                android:layout_height="120dp"
                android:scaleType="center" />

            <CheckBox
                android:id="@+id/sellectImgB"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:button="@null"
                android:drawableLeft="@drawable/answer_ar_checked"
                android:padding="10dp"
                android:textColor="@color/color_cc"
                android:textSize="12sp" />

        </LinearLayout>

    </LinearLayout>


</RelativeLayout>