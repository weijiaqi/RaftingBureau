<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">


        <TextView
            android:id="@+id/tv_content"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:background="@drawable/shape_blue_solid_block"
            android:lineSpacingExtra="3dp"
            android:paddingVertical="11dp"
            android:paddingStart="20dp"
            android:paddingEnd="15dp"
            android:text=""
            android:breakStrategy="simple"
            android:textColor="@color/color_0d"
            android:textSize="12sp"
            android:textStyle="bold" />

        <View
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:background="@drawable/layer_left_top_triangle" />

        <View
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_alignEnd="@+id/tv_content"
            android:layout_alignBottom="@+id/tv_content"
            android:background="@drawable/layer_right_bottom_triangle" />

    </RelativeLayout>
</RelativeLayout>