<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/color_01"
    android:fitsSystemWindows="true"
    android:orientation="vertical">

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rcy_login"
        android:layout_marginTop="30dp"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginBottom="70dp" />


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:layout_alignParentBottom="true"
        android:gravity="center_vertical"
        android:orientation="horizontal">


        <com.hjq.shape.view.ShapeEditText
            android:id="@+id/et_content"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="29dp"
            android:layout_weight="2"
            android:gravity="left"
            android:hint="请输入手机号"
            android:padding="10dp"
            android:paddingHorizontal="10dp"
            android:textColor="@android:color/white"
            android:textColorHint="@color/color_99"
            android:textSize="14sp"
            app:shape="rectangle"
            android:text=""
            android:singleLine="true"
            android:imeOptions="actionSend"
            app:shape_radius="10dp"
            app:shape_solidColor="@color/color_21" />

        <com.hjq.shape.view.ShapeTextView
            android:id="@+id/tv_submit"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="12dp"
            android:layout_marginEnd="19dp"
            android:layout_weight="1"
            android:gravity="center"
            android:padding="10dp"
            android:text="获取验证码"
            android:textColor="@color/color_01"
            android:textSize="14sp"
            android:textStyle="bold"
            app:shape_endColor="@color/color_6c"
            app:shape_radius="9dp"
            app:shape_startColor="@color/color_6d" />
    </LinearLayout>
</RelativeLayout>