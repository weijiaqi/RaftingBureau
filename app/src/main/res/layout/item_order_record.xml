<?xml version="1.0" encoding="utf-8"?>
<com.hjq.shape.layout.ShapeLinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/ll_content"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginHorizontal="14dp"
    android:layout_marginBottom="19dp"
    android:orientation="vertical"
    android:paddingHorizontal="19dp"
    android:paddingBottom="13dp"
    app:shape_radius="10dp"
    app:shape_solidColor="@color/color_1c">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="11dp"
        android:layout_marginBottom="10dp"
        android:drawableLeft="@drawable/making_drink"
        android:drawablePadding="9dp"

        android:text="接收时间：2022-10-15 14：00"
        android:textColor="@color/color_cc"
        android:textSize="12sp" />

    <View
        android:id="@+id/view_color_line"
        android:layout_width="match_parent"
        android:layout_height="0.4dp"
        android:background="@color/color_35" />


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/tv_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:text="传递漂-传递杯"
            android:textColor="@color/white"
            android:textSize="14sp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tv_title"
            android:layout_marginTop="9dp"
            android:text="传递漂玩法必备奶茶饮品"
            android:textColor="@color/color_cc"
            android:textSize="12sp" />


        <ImageView
            android:layout_width="51dp"
            android:layout_height="51dp"
            android:src="@drawable/aa"
            android:layout_alignParentEnd="true"
            android:layout_marginTop="15dp"
            />


    </RelativeLayout>

    <RelativeLayout
        android:layout_marginTop="12dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="价格"
            android:textSize="12sp"
            android:textColor="@color/color_99"
            />

        <TextView
            android:layout_alignParentEnd="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="￥288"
            android:layout_centerVertical="true"
            android:textSize="14sp"
            android:textStyle="bold"
            android:textColor="@color/white"
            />
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp">

        <com.hjq.shape.view.ShapeTextView
            android:id="@+id/tv_status"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="已付款"
            android:textSize="12sp"
            app:shape_textEndColor="@color/color_6d"
            app:shape_textStartColor="@color/color_6c" />

        <TextView
            android:id="@+id/tv_payment"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:text="剩余支付时间 15:52"
            android:textColor="@color/color_f15"
            android:textSize="12sp"
            android:layout_marginBottom="5dp"
           />


        <TextView
            android:id="@+id/tv_write_off"
            android:layout_below="@+id/tv_payment"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:text="立即核销"
            android:textColor="@color/white"
            android:textSize="12sp"
            android:textStyle="bold" />

    </RelativeLayout>


</com.hjq.shape.layout.ShapeLinearLayout>