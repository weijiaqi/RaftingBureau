<?xml version="1.0" encoding="utf-8"?>
<com.hjq.shape.layout.ShapeLinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="center"
    android:orientation="vertical"
    android:paddingVertical="28dp"
    app:shape_radius="10dp"
    app:shape_solidColor="@color/white">


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="我的核销码"
        android:textColor="@color/color_00"
        android:textSize="17sp"
        android:textStyle="bold" />

    <ImageView
        android:id="@+id/iv_code"
        android:layout_width="187dp"
        android:layout_height="187dp"
        android:layout_marginTop="26dp"
        android:src="@drawable/demo_code" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="14dp"
        android:textStyle="bold"
        android:text="请出示核销码给工作人员\n核销完成后核销码将消失"
        android:textColor="@color/color_f6"
        android:textSize="12sp" />
</com.hjq.shape.layout.ShapeLinearLayout>