<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <RelativeLayout
        android:layout_width="259dp"
        android:layout_height="404dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="47dp"
        android:background="@drawable/announcement_main">


        <ImageView
            android:id="@+id/iv_pic"
            android:layout_width="match_parent"
            android:layout_height="81dp"
            android:layout_marginHorizontal="14dp"
            android:layout_marginTop="48dp" />


        <TextView
            android:id="@+id/tv_content"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/iv_pic"
            android:layout_marginTop="14dp"
            android:layout_marginHorizontal="64dp"
            android:text=""
            android:textColor="@color/color_33"
            android:textSize="12sp" />

    </RelativeLayout>


    <RelativeLayout
        android:layout_width="321dp"
        android:layout_height="70dp"
        android:layout_centerHorizontal="true"
        android:background="@drawable/announcement">

        <com.drifting.bureau.view.FontTextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="19dp"
            android:layout_marginTop="12dp"
            android:text="PIAOLIUJU 公告"
            android:textColor="@color/white"
            android:textSize="18sp"
            app:fontType="PangMen"

            />


    </RelativeLayout>


    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rcy_tab"
        android:layout_width="259dp"
        android:layout_height="42dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="37dp" />


</RelativeLayout>