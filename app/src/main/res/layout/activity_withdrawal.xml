<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/withdrawal_bg"
    android:fitsSystemWindows="true">

    <include layout="@layout/include_title" />


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/toolbar"
        android:layout_marginTop="50dp"
        android:orientation="vertical"
        android:paddingHorizontal="26dp">

        <com.drifting.bureau.view.FontTextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="申请提现"
            android:textColor="@color/white"
            android:textSize="17sp"
            app:fontType="Pingfang_bold" />


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:text="提现需要审批，提交申请后请耐心等待"
            android:textColor="@color/color_99"
            android:textSize="12sp" />

        <com.hjq.shape.layout.ShapeLinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="14dp"
            android:orientation="vertical"
            android:paddingLeft="24dp"
            android:paddingEnd="29dp"
            app:shape_radius="10dp"
            app:shape_solidColor="@color/white">

            <com.hjq.shape.view.ShapeTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"

                android:layout_marginTop="24dp"
                android:paddingHorizontal="14dp"
                android:paddingVertical="4dp"
                android:text="线上提现业务需扣除提现金额0.6%手续费"
                android:textColor="@color/white"
                android:textSize="11sp"
                app:shape_radius="100dp"
                app:shape_solidColor="@color/color_e2" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="29dp"
                android:text="支付宝账号"
                android:textColor="@color/color_00"
                android:textSize="14sp"
                android:textStyle="bold" />

            <com.hjq.shape.view.ShapeEditText
                android:id="@+id/et_account"
                android:layout_width="match_parent"
                android:layout_height="34dp"
                android:layout_marginTop="10dp"
                android:background="@null"
                android:hint="请输入支付宝账号"
                android:paddingLeft="11dp"
                android:text=""
                android:textColor="@color/color_00"
                android:textCursorDrawable="@drawable/text_cursor"
                android:textSize="11sp"
                app:shape_radius="100dp"
                app:shape_solidColor="@color/color_e6" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="19dp"
                android:text="支付宝实名名称"
                android:textColor="@color/color_00"
                android:textSize="14sp"
                android:textStyle="bold" />

            <com.hjq.shape.view.ShapeEditText
                android:id="@+id/et_name"
                android:layout_width="match_parent"
                android:layout_height="34dp"
                android:layout_marginTop="10dp"
                android:background="@null"
                android:hint="请输入支付宝实名认证的姓名"
                android:paddingLeft="11dp"
                android:text=""
                android:textColor="@color/color_00"
                android:textCursorDrawable="@drawable/text_cursor"
                android:textSize="11sp"
                app:shape_radius="100dp"
                app:shape_solidColor="@color/color_e6" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="19dp"
                android:text="支付宝账号"
                android:textColor="@color/color_00"
                android:textSize="14sp"
                android:textStyle="bold" />


            <com.hjq.shape.layout.ShapeLinearLayout
                android:layout_width="match_parent"
                android:layout_height="34dp"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="10dp"
                app:shape_radius="100dp"
                app:shape_solidColor="@color/color_e6">

                <EditText
                    android:id="@+id/et_money"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:background="@null"
                    android:hint="提现金额"
                    android:paddingLeft="11dp"
                    android:text=""
                    android:inputType="number"
                    android:textColor="@color/color_00"
                    android:textCursorDrawable="@drawable/text_cursor"
                    android:textSize="11sp" />

                <TextView
                    android:id="@+id/tv_all"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="10dp"
                    android:text="全部"
                    android:textColor="@color/color_a6"
                    android:textSize="11sp" />

            </com.hjq.shape.layout.ShapeLinearLayout>

            <TextView
                android:id="@+id/tv_money"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="32dp"
                android:gravity="end"
                android:text=""
                android:textColor="@color/color_33"
                android:textSize="12sp" />

        </com.hjq.shape.layout.ShapeLinearLayout>


        <com.hjq.shape.view.ShapeTextView
            android:id="@+id/tv_withdrawal"
            android:layout_width="156dp"
            android:layout_height="38dp"
            android:layout_gravity="center"
            android:layout_marginTop="38dp"
            android:gravity="center"
            android:text="申请提现"
            android:textColor="@color/color_00"
            android:textSize="14sp"
            android:textStyle="bold"
            app:shape_endColor="@color/color_6d"
            app:shape_radius="100dp"
            app:shape_startColor="@color/color_6c" />
    </LinearLayout>


</RelativeLayout>