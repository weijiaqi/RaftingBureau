<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="800dp"
    android:layout_height="450dp"
    android:background="@drawable/ar_space_station_bg">


    <LinearLayout
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:layout_marginStart="48dp"
        android:layout_marginTop="89dp"
        android:gravity="center"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tv_today_make"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:shadowColor="@color/color_6dec"
            android:shadowDx="0"
            android:shadowDy="0"
            android:shadowRadius="10"
            android:text=""
            android:textColor="@color/white"
            android:textSize="19sp"
            android:textStyle="bold" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="今日制作（杯）"
            android:textColor="@color/white"
            android:textSize="7sp" />
    </LinearLayout>


    <LinearLayout
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:layout_marginStart="48dp"
        android:layout_marginTop="221dp"
        android:gravity="center"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tv_whole_make"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:shadowColor="@color/color_6dec"
            android:shadowDx="0"
            android:shadowDy="0"
            android:shadowRadius="10"
            android:text=""
            android:textColor="@color/white"
            android:textSize="19sp"
            android:textStyle="bold" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="累计制作（杯）"
            android:textColor="@color/white"
            android:textSize="7sp" />
    </LinearLayout>


    <TextView
        android:id="@+id/tv_whole_income"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="54dp"
        android:layout_marginBottom="29dp"
        android:text=""
        android:textColor="@color/white"
        android:textSize="18sp" />


    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="245dp"
        android:layout_marginBottom="31dp"
        android:orientation="vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="累计制作"
            android:textColor="@color/white"
            android:textSize="7sp" />

        <TextView
            android:id="@+id/tv_whole_make2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=""
            android:textColor="@color/color_3f"
            android:textSize="10sp" />

    </LinearLayout>


    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="345.5dp"
        android:layout_marginBottom="31dp"
        android:orientation="vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="累计收入"
            android:textColor="@color/white"
            android:textSize="7sp" />

        <TextView
            android:id="@+id/tv_whole_income2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=""
            android:textColor="@color/color_3f"
            android:textSize="10sp" />

    </LinearLayout>


    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="446.5dp"
        android:layout_marginBottom="31dp"
        android:orientation="vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="今日制作"
            android:textColor="@color/white"
            android:textSize="7sp" />

        <TextView
            android:id="@+id/tv_today_make2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=""
            android:textColor="@color/color_3f"
            android:textSize="10sp" />

    </LinearLayout>


    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="547dp"
        android:layout_marginBottom="31dp"
        android:orientation="vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="可提现"
            android:textColor="@color/white"
            android:textSize="7sp" />

        <TextView
            android:id="@+id/tv_withdrawal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=""
            android:textColor="@color/color_3f"
            android:textSize="10sp" />

    </LinearLayout>


    <ImageView
        android:id="@+id/iv_none_new_order"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:src="@drawable/space_not_data"
        android:visibility="invisible" />


    <ImageView
        android:id="@+id/iv_have_new_order"
        android:visibility="invisible"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:src="@drawable/ar_space_drink" />


    <LinearLayout
        android:id="@+id/ll_new_space_order"
         android:visibility="invisible"
        android:layout_width="165dp"
        android:layout_height="110dp"
        android:layout_gravity="center"
        android:layout_marginStart="-30.5dp"
        android:layout_marginTop="82dp"
        android:layout_toRightOf="@+id/iv_have_new_order"
        android:background="@drawable/ar_new_order_bg"
        android:gravity="center"
        android:orientation="vertical"
        android:paddingStart="29dp"
        android:paddingEnd="31.5dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="收到来自宇宙深处 漂来的奶茶订单"
            android:textColor="@color/white"
            android:textSize="12sp"
            android:textStyle="bold" />

        <com.hjq.shape.view.ShapeTextView
            android:id="@+id/tv_select"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:paddingHorizontal="22dp"
            android:paddingVertical="2dp"
            android:text="查看"
            android:textColor="@color/color_00"
            android:textSize="12sp"
            app:shape_endColor="@color/color_6d"
            app:shape_radius="100dp"
            app:shape_startColor="@color/color_6c" />

        <TextView
            android:id="@+id/tv_timeliness"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="2dp"
            android:text=""
            android:textColor="@color/color_fd"
            android:textSize="11sp" />
    </LinearLayout>


    <com.hjq.shape.view.ShapeTextView
        android:id="@+id/tv_withdraw_now"
        android:layout_width="153dp"
        android:layout_height="35dp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginEnd="21dp"
        android:layout_marginBottom="21dp"
        android:gravity="center"
        android:text="立即提现"
        android:textColor="@color/white"
        android:textSize="15sp"
        android:textStyle="bold"
        app:shape_radius="100dp"
        app:shape_solidColor="@color/color_da" />
</RelativeLayout>